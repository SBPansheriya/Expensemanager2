<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Profile.SettingsActivity">

    <RelativeLayout
        android:id="@+id/tbMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:src="@drawable/black_back" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@+id/back"
            android:fontFamily="@font/lexenddeca_bold"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbMenu"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/next"
            android:layout_marginStart="10dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lexenddeca_semibold"
            android:text="@string/notification"/>
            <ImageView
                android:id="@+id/next"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow_black"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/next1"
                android:layout_marginStart="10dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexenddeca_semibold"
                android:text="@string/share"/>
            <ImageView
                android:id="@+id/next1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow_black"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/next2"
                android:layout_marginStart="10dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexenddeca_semibold"
                android:text="@string/rate"/>
            <ImageView
                android:id="@+id/next2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow_black"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/next3"
                android:layout_marginStart="10dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexenddeca_semibold"
                android:text="@string/help"/>
            <ImageView
                android:id="@+id/next3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow_black"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/next4"
                android:layout_marginStart="10dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexenddeca_semibold"
                android:text="@string/about"/>
            <ImageView
                android:id="@+id/next4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow_black"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>